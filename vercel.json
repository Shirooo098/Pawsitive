{
  "version": 2,
  "builds": [
    {
      "src": "./server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/server/(.*)",
      "dest": "/server/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },

    {
      "src": "/(.*\\.\\w+)",
      "dest": "/client/$1"
    },
    
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ]
}